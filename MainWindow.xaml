<Window x:Class="FleetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fleet Manager - Accueil" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Style pour les boutons principaux -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- En-t�te -->
        <Border Background="#1565C0" Height="120" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="?? Fleet Manager" 
                          FontSize="36" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Gestion de parc automobile" 
                          FontSize="16" 
                          Foreground="#E3F2FD"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Indicateur de connexion BDD -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="20,10,20,0">
            <Ellipse x:Name="ConnectionIndicator" 
                     Width="12" Height="12" 
                     Fill="Gray"
                     Margin="0,0,8,0"/>
            <TextBlock x:Name="ConnectionStatus" 
                      Text="Connexion..." 
                      FontSize="11" 
                      Foreground="White"/>
        </StackPanel>

        <!-- Contenu principal -->
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Margin="0,60,0,0">

            <!-- Message de bienvenue -->
            <TextBlock Text="Bienvenue sur votre espace de gestion" 
                      FontSize="22" 
                      FontWeight="Medium"
                      Foreground="#333"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,40"/>

            <!-- Grille de boutons -->
            <Grid Width="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bouton V�hicules -->
                <Button Grid.Row="0" Grid.Column="0" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="BtnVehicules_Click">
                    <StackPanel>
                        <TextBlock Text="??" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Gestion V�hicules" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Bouton Suivi Carburant -->
                <Button Grid.Row="0" Grid.Column="1" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="BtnSuivi_Click">
                    <StackPanel>
                        <TextBlock Text="?" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Suivi Carburant" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Bouton Statistiques -->
                <Button Grid.Row="1" Grid.Column="0" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="BtnStatistiques_Click">
                    <StackPanel>
                        <TextBlock Text="??" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Statistiques" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Bouton Utilisateurs -->
                <Button Grid.Row="1" Grid.Column="1" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="BtnUtilisateurs_Click">
                    <StackPanel>
                        <TextBlock Text="??" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Utilisateurs" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Pied de page -->
        <StackPanel VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <TextBlock Text="Version 1.0 - Projet Universitaire" 
                      FontSize="12" 
                      Foreground="#999"
                      HorizontalAlignment="Center"/>
            <TextBlock Text="� 2025 Fleet Manager" 
                      FontSize="11" 
                      Foreground="#999"
                      HorizontalAlignment="Center"
                      Margin="0,3,0,0"/>
        </StackPanel>
    </Grid>
</Window>