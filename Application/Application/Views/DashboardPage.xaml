<Page x:Class="FleetManager.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Loaded="Page_Loaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <!-- Statistiques generales -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total vehicules -->
                <Border Grid.Column="0" Background="#1E293B" Margin="0,0,10,0" Padding="20" CornerRadius="12">
                    <StackPanel>
                        <TextBlock Text="Total Vehicules" FontSize="13" Foreground="#94A3B8"/>
                        <TextBlock x:Name="TxtTotalVehicules" Text="0" FontSize="36" FontWeight="Bold" Foreground="#6366F1" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total km -->
                <Border Grid.Column="1" Background="#1E293B" Margin="5,0" Padding="20" CornerRadius="12">
                    <StackPanel>
                        <TextBlock Text="Km Parcourus" FontSize="13" Foreground="#94A3B8"/>
                        <TextBlock x:Name="TxtTotalKm" Text="0 km" FontSize="36" FontWeight="Bold" Foreground="#10B981" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total cout carburant -->
                <Border Grid.Column="2" Background="#1E293B" Margin="5,0" Padding="20" CornerRadius="12">
                    <StackPanel>
                        <TextBlock Text="Cout Carburant" FontSize="13" Foreground="#94A3B8"/>
                        <TextBlock x:Name="TxtTotalCout" Text="0 EUR" FontSize="36" FontWeight="Bold" Foreground="#F59E0B" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total litres -->
                <Border Grid.Column="3" Background="#1E293B" Margin="10,0,0,0" Padding="20" CornerRadius="12">
                    <StackPanel>
                        <TextBlock Text="Total Litres" FontSize="13" Foreground="#94A3B8"/>
                        <TextBlock x:Name="TxtTotalLitres" Text="0 L" FontSize="36" FontWeight="Bold" Foreground="#8B5CF6" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Repartition par carburant -->
            <TextBlock Text="Repartition par type de carburant" FontSize="16" FontWeight="SemiBold" Foreground="#F8FAFC" Margin="0,0,0,15"/>
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Essence -->
                <Border Grid.Column="0" Background="#1E293B" Margin="0,0,10,0" Padding="20" CornerRadius="12">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="50" Height="50" CornerRadius="25" Background="#EF4444" Margin="0,0,0,10">
                            <TextBlock Text="E" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Essence" FontSize="14" FontWeight="SemiBold" Foreground="#F8FAFC" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtEssence" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F8FAFC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Diesel -->
                <Border Grid.Column="1" Background="#1E293B" Margin="5,0" Padding="20" CornerRadius="12">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="50" Height="50" CornerRadius="25" Background="#64748B" Margin="0,0,0,10">
                            <TextBlock Text="D" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Diesel" FontSize="14" FontWeight="SemiBold" Foreground="#F8FAFC" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtDiesel" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F8FAFC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Hybride -->
                <Border Grid.Column="2" Background="#1E293B" Margin="5,0" Padding="20" CornerRadius="12">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="50" Height="50" CornerRadius="25" Background="#10B981" Margin="0,0,0,10">
                            <TextBlock Text="H" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Hybride" FontSize="14" FontWeight="SemiBold" Foreground="#F8FAFC" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtHybride" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F8FAFC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Electrique -->
                <Border Grid.Column="3" Background="#1E293B" Margin="10,0,0,0" Padding="20" CornerRadius="12">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="50" Height="50" CornerRadius="25" Background="#3B82F6" Margin="0,0,0,10">
                            <TextBlock Text="E" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Electrique" FontSize="14" FontWeight="SemiBold" Foreground="#F8FAFC" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtElectrique" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F8FAFC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Liste des vehicules -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Liste des vehicules" FontSize="16" FontWeight="SemiBold" Foreground="#F8FAFC" VerticalAlignment="Center"/>
                    <Button Content="Actualiser" Margin="15,0,0,0" Padding="12,8" Background="#6366F1" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BtnActualiser_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <Border Grid.Row="1" Background="#1E293B" Padding="15" CornerRadius="12">
                    <DataGrid x:Name="DgVehicules"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             CanUserAddRows="False"
                             GridLinesVisibility="None"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="#F8FAFC"
                             RowBackground="#1E293B"
                             AlternatingRowBackground="#334155"
                             MaxHeight="300">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#0F172A"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Immatriculation" Binding="{Binding Immatriculation}" Width="*"/>
                            <DataGridTextColumn Header="Marque" Binding="{Binding Marque}" Width="*"/>
                            <DataGridTextColumn Header="Modele" Binding="{Binding Modele}" Width="*"/>
                            <DataGridTextColumn Header="Carburant" Binding="{Binding TypeCarburant}" Width="*"/>
                            <DataGridTextColumn Header="Date d'achat" Binding="{Binding DateAchat, StringFormat=dd/MM/yyyy}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
