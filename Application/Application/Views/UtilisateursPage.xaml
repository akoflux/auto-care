<Page x:Class="FleetManager.Views.UtilisateursPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <!-- Formulaire d'ajout -->
            <Border Background="#1E293B" Padding="25" CornerRadius="12" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Ajouter / Modifier un utilisateur" FontSize="16" FontWeight="SemiBold" Foreground="#F8FAFC" Margin="0,0,0,20"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Nom" FontSize="12" Foreground="#94A3B8" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtNom" Height="40" Padding="10" Background="#334155" Foreground="#F8FAFC" BorderBrush="#475569" BorderThickness="1"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="Prenom" FontSize="12" Foreground="#94A3B8" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtPrenom" Height="40" Padding="10" Background="#334155" Foreground="#F8FAFC" BorderBrush="#475569" BorderThickness="1"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="0,0,10,0">
                            <TextBlock Text="Email" FontSize="12" Foreground="#94A3B8" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtEmail" Height="40" Padding="10" Background="#334155" Foreground="#F8FAFC" BorderBrush="#475569" BorderThickness="1"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Margin="0,0,10,0">
                            <TextBlock Text="Mot de passe" FontSize="12" Foreground="#94A3B8" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="TxtPassword" Height="40" Padding="10" Background="#334155" Foreground="#F8FAFC" BorderBrush="#475569" BorderThickness="1"/>
                        </StackPanel>
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Role" FontSize="12" Foreground="#94A3B8" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbRole" Height="40" Background="#334155" Foreground="#1E293B" BorderBrush="#475569" BorderThickness="1">
                                <ComboBoxItem Content="Super Admin" Tag="1" Foreground="#1E293B"/>
                                <ComboBoxItem Content="Admin" Tag="2" Foreground="#1E293B"/>
                                <ComboBoxItem Content="Employe" Tag="3" Foreground="#1E293B"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button x:Name="BtnAnnuler" Content="Annuler" Width="100" Height="40" Margin="0,0,10,0" Click="BtnAnnuler_Click" Visibility="Collapsed" Background="#64748B" Foreground="White" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#475569"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="BtnAjouter" Content="Ajouter" Width="100" Height="40" Background="#10B981" Foreground="White" Click="BtnAjouter_Click" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#059669"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Liste des utilisateurs -->
            <Border Background="#1E293B" Padding="20" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Liste des utilisateurs" FontSize="16" FontWeight="SemiBold" Foreground="#F8FAFC" Margin="0,0,0,15"/>
                    <DataGrid Grid.Row="1" x:Name="DgUtilisateurs"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             CanUserAddRows="False"
                             GridLinesVisibility="None"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="#F8FAFC"
                             RowBackground="#1E293B"
                             AlternatingRowBackground="#334155"
                             MaxHeight="400">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#0F172A"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                            <DataGridTextColumn Header="Prenom" Binding="{Binding Prenom}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding RoleNom}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Modifier" Margin="0,0,5,0" Padding="8,4" Click="BtnModifier_Click" Tag="{Binding}" Background="#6366F1" Foreground="White" BorderThickness="0" Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button Content="Supprimer" Padding="8,4" Background="#EF4444" Foreground="White" Click="BtnSupprimer_Click" Tag="{Binding}" BorderThickness="0" Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#DC2626"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
